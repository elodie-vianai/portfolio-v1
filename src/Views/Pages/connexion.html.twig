{% extends 'Layout/index.html.twig' %}

{% block title %}
    Elodie's Portfolio - connexion
{% endblock %}



{% block stylesheets %}
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/inscriptionConnexion.css">
{% endblock %}


{% block header %}
    {{ include("Layout/publicHeader.html.twig") }}
{% endblock %}


{% block body %}
    <div class="row">
        <h1>Connexion</h1>
    </div>

    <div class="row">
        <p>Tous les champs marqu√©s d'un * sont obligatoires.</p>
    </div>

    <form class="form-horizontal" id="formulaire" method="post" action="/connecting">
        <div class="form-group">
            <div class="col-lg-2"> </div>
            <div class="col-lg-2">
                <label for="username" class="control-label">Nom d'utilisateur</label>
            </div>
            <div class="col-lg-6">
                <input type="text" name="username" id="username" placeholder="Nom d'utilisateur" class="form-control" required>
            </div>
            <div class="col-lg-2"> </div>
        </div>
        <div class="form-group">
            <div class="col-lg-2"> </div>
            <div class="col-lg-2">
                <label for="mdp" class="control-label">Mot de passe</label>
            </div>
            <div class="col-lg-6">
                <input type="password" name="mdp" class="form-control" id="mdp" placeholder="Mot de passe" required>
            </div>
            <div class="col-lg-2"> </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-6 col-lg-6">
                <button id="submit" type="submit" class="btn btn-primary">Valider</button>
            </div>
        </div>
    </form>
{% endblock %}

{% block footer %}
    {{ include("Layout/footer.html.twig") }}
{% endblock %}