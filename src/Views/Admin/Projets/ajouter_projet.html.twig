{% extends 'Layout/formulaire.html.twig' %}


{% block title %}
    Admin Portfolio - Ajouter
{% endblock %}



{% block stylesheets %}
    <link rel="stylesheet" href="/css/header.css">
{% endblock %}


{% block header %}
    {{ include("Layout/adminHeader.html.twig") }}
{% endblock %}

{% block titrePage %}
    <h1>Ajouter un nouveau projet</h1>
{% endblock %}

{% block formAction %}/admin/gestiondesprojets{% endblock %}

{% block formulaire %}
    <div class="form-group">
        <div class="row">
            <h3>Présentation du projet</h3>
        </div>
        <div class="row">
            <div class="col-lg-2">
                <label for="name" class="control-label">Nom du projet</label>
            </div>
            <div class="col-lg-4">
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="col-lg-1"></div>
            <div class="col-lg-3">
                <label for="year" class="control-label">Date réalisation du projet</label>
            </div>
            <div class="col-lg-2">
                <input type="number" class="form-control" id="year" min="2010" name="year">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <label for="image_path" class="control-label">Screenshot du projet</label>
            </div>
            <div class="col-lg-9">
                <input type="file" class="form-control-file" id="image_path" name="image_path" aria-describedby="aideInsertImage">
                <small id="aideInsertImage" class="form-text text-muted">Seuls les fichiers images sont admis (jpg, jpeg, png...)</small>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <h3>Description du projet</h3>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <label for="description" class="control-label">Description du projet</label>
            </div>
            <div class="col-lg-9">
                <textarea class="form-control" rows="5" placeholder="Tapez ici votre description." id="description" name="description"></textarea>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <h3>Technologies utilisées pour ce projet</h3>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <label for="technologies">Technologies utilisées</label>
            </div>
            <div class="col-lg-6">
                <select multiple class="form-control" id="technologies" name="technologies[]" aria-describedby="aideAjout">
                    {% for technologie in technologies %}
                        <option value="{{ technologie.id }}">{{ technologie.name }}</option>
                    {% endfor %}
                </select>
                <small id="aideAjout" class="form-text text-muted">Pour sélectionner plusieurs technologies, maintenez la touche CTRL enfoncée</small>
            </div>
            <div class="col-lg-3"></div>
        </div>
    </div>
{% endblock %}

{% block Boutton %}Enregistrer{% endblock %}

{% block footer %}
    {{ include("Layout/footer.html.twig") }}
{% endblock %}